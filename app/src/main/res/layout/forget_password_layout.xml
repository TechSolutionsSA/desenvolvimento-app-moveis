<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.forgetPassword.ForgetPassword"
    android:background="@color/gray_primary"
    android:theme="@style/Theme.AppCompat.Light">

    <TextView
        android:id="@+id/textEsqueceuSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueceu sua Senha?"
        android:textColor="@color/blue_primary"
        android:textSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Insira seu email para podemos redifinir sua senha"
        app:layout_constraintTop_toBottomOf="@id/textEsqueceuSenha"
        android:textColor="@color/gray_secondary"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Digite seu email"
        android:textColor="@color/black"
        android:background="@drawable/custom_edit_text"
        android:textColorHint="@color/black"
        android:padding="10dp"

        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/descricao"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/inputEmail"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/blue_primary"


        android:text="Enviar E-mail"/>



</androidx.constraintlayout.widget.ConstraintLayout>