<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_primary"
    tools:context=".features.login.LoginActivity"
    android:theme="@style/Theme.AppCompat.Light"
    >
    <TextView
        android:id="@+id/textOla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OlÃ¡!"
        android:textColor="@color/blue_primary"
        android:textSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2" />
    <TextView
        android:id="@+id/textBemvindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-Vindo!"
        android:textColor="@color/blue_primary"
        android:textSize="50dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textOla" />

    <TextView
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Insira seus dados para gerenciar seus contratos ativos"
        app:layout_constraintTop_toBottomOf="@id/textBemvindo"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Digite seu email"
        android:textColor="@color/black"
        android:background="@drawable/custom_edit_text"
        android:textColorHint="@color/black"
        android:padding="10dp"

        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/descricao"/>
    <EditText
        android:id="@+id/inputSenha"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:hint="Digite sua senha"
        android:background="@drawable/custom_edit_text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"

        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/inputEmail"/>

    <TextView
        android:id="@+id/linkEsqueceSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/inputSenha"
        android:textColor="@color/blue_primary"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Esqueceu a senha?"/>


    <Button
        android:id="@+id/botaoEntrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linkEsqueceSenha"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/blue_primary"
        android:padding="15dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Entrar"/>





</androidx.constraintlayout.widget.ConstraintLayout>